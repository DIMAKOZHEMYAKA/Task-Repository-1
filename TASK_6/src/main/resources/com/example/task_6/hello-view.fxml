<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox alignment="CENTER" prefHeight="505.0" prefWidth="623.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.task_6.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <Label text="Красным - поле canvas" />
      <FlowPane prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: red;">
         <children>
            <Canvas fx:id="canvas" height="200.0" onMouseDragged="#drawShape" onMousePressed="#drawShape" width="583.0" />
         </children>
      </FlowPane>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <FlowPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label text="Цвет заливки">
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="3.0" />
                     </FlowPane.margin>
                  </Label>
                  <ColorPicker fx:id="colorPicker">
                     <value>
                        <Color />
                     </value>
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="3.0" />
                     </FlowPane.margin>
                  </ColorPicker>
                  <Label text="Цвет контура">
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="3.0" />
                     </FlowPane.margin>
                  </Label>
                  <ColorPicker fx:id="colorPickerStroke">
                     <value>
                        <Color />
                     </value>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="3.0" />
                     </FlowPane.margin>
                  </ColorPicker>
                  <TextField fx:id="fieldSize" promptText="Размер">
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="3.0" />
                     </FlowPane.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#buttonUndo" text=" Удалить первую фигуру">
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="3.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#buttonCLear" text=" Удалить все фигуры">
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="3.0" />
                     </FlowPane.margin>
                  </Button>
                  <Label fx:id="textLast" text="Пусто">
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="3.0" />
                     </FlowPane.margin>
                  </Label>
               </children>
            </FlowPane>
            <FlowPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <ListView fx:id="listView" prefHeight="240.0" prefWidth="409.0" />
               </children>
            </FlowPane>
         </children>
      </HBox>
   </children>
</VBox>
