<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="643.0" prefWidth="767.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.task_8.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="ballsLabel" text="Label">
               <HBox.margin>
                  <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="presentLabel" text="Label">
               <HBox.margin>
                  <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="starLabel" text="Label">
               <HBox.margin>
                  <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <Pane fx:id="paneTree" prefHeight="567.0" prefWidth="727.0" style="-fx-border-color: red;" />
      <FlowPane alignment="CENTER" prefHeight="52.0" prefWidth="727.0">
         <children>
            <Button fx:id="ballsButton" mnemonicParsing="false" onAction="#addBalls" text="Шарики">
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </FlowPane.margin>
            </Button>
            <Button fx:id="presentsButton" mnemonicParsing="false" onAction="#addPresents" text="Подарки">
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </FlowPane.margin>
            </Button>
            <Button fx:id="starButton" mnemonicParsing="false" onAction="#addStar" text="Звезда">
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </FlowPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#addAllDecorations" text="Добавить все">
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </FlowPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#removeAllDecorations" text="Убрать все">
               <FlowPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </FlowPane.margin>
            </Button>
         </children>
      </FlowPane>
   </children>
</VBox>
